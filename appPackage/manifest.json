{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.breakinize.socialhealth.extension",
    "developer": {
        "name": "Breakinize, Ltd.",
        "websiteUrl": "${{TAB_ENDPOINT}}",
        "privacyUrl": "${{TAB_ENDPOINT}}/index.html#/privacy",
        "termsOfUseUrl": "${{TAB_ENDPOINT}}/index.html#/termsofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Social Health-${{APP_NAME_SUFFIX}}",
        "full": "Social Health Monitoring"
    },
    "description": {
        "short": "Statistics of communication & engagement",
        "full": "Statistics of communication patterns and engagement levels of you and your team"
    },
    "accentColor": "#FFFFFF",
    "bots": [],
    "composeExtensions": [],
    "configurableTabs": [],
    "staticTabs": [
        {
            "entityId": "index0",
            "name": "Dashboard",
            "contentUrl": "${{TAB_ENDPOINT}}/index.html#/dashboard",
            "websiteUrl": "${{TAB_ENDPOINT}}/index.html#/dashboard",
            "scopes": [
                "personal"
            ]
        },
        {
            "entityId": "index1",
            "name": "Product Settings",
            "contentUrl": "${{TAB_ENDPOINT}}/index.html#/productSettings",
            "websiteUrl": "${{TAB_ENDPOINT}}/index.html#/productSettings",
            "scopes": [
                "personal"
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${{TAB_DOMAIN}}"
    ]
}